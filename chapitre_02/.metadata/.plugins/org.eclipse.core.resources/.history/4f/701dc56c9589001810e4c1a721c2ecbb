package chapitre_02_05;

public class Principale {
	
	static double x = 0.0;
	static double y = 0.0;
	
	public static void main(String[] args) {

		
		for( int i=0; i<10; i++)
		{
			bouge(i);
		} 
	}

	public static void bouge(int iteration) {
		
		
		x = x + Math.random()*2-1;
		y = y + Math.random()*2-1;
		
		System.out.println("pour l'itération "+iteration+ " le mobile est en ["+x+","+y+"]");
		
		if(x>5) {
			x=0;
		}
		
	}
}
