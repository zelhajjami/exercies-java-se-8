package chapitre_02_04;

public class Principale {

	public static void main(String[] args) {

		
		for( int i=0; i<10; i++)
		{
			bouge(i);
		} 
	}

	public static void bouge(int iteration) {
		
		double x = 0.0;
		x = x + 1.0;
		
		System.out.println("pour l'itération "+iteration+ "x vaut "+x);
		
		if(x>5) {
			x=0;
		}
	}
}
